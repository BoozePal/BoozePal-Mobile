<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1000dp">

    <TextView
        android:text="Name:"
        android:layout_width="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="36dp"
        android:id="@+id/settings_label_name"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_height="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/settings_label_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/settings_edit_name"
        android:layout_height="40dp" />

    <TextView
        android:text="Gender:"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/settings_label_gender"
        android:layout_below="@+id/settings_label_name"
        android:layout_alignRight="@+id/settings_label_name"
        android:layout_alignEnd="@+id/settings_label_name"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        android:textAlignment="textEnd" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_label_gender"
        android:layout_alignLeft="@+id/settings_edit_name"
        android:layout_alignStart="@+id/settings_edit_name"
        android:id="@+id/settings_edit_gender_radiogroup">

        <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_edit_gender_radiobutton_female"
            android:layout_weight="1" />

        <RadioButton
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_edit_gender_radiobutton_male"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Favourite booze:"
        android:layout_width="90dp"
        android:layout_marginTop="45dp"
        android:id="@+id/settings_label_booze"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/settings_edit_gender_radiogroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/settings_label_gender"
        android:layout_alignEnd="@+id/settings_label_gender"
        android:layout_height="50dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/settings_label_booze"
        android:layout_alignLeft="@+id/settings_edit_gender_radiogroup"
        android:layout_alignStart="@+id/settings_edit_gender_radiogroup"
        android:layout_height="150dp"
        android:id="@+id/settings_boozelist" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/settings_boozelist"
        android:layout_alignStart="@+id/settings_boozelist"
        android:layout_alignTop="@+id/settings_label_pub"
        android:id="@+id/settings_publist" />

    <TextView
        android:text="Favourite pub:"
        android:layout_width="90dp"
        android:id="@+id/settings_label_pub"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_height="50dp"
        android:layout_below="@+id/settings_boozelist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/settings_label_booze"
        android:layout_alignEnd="@+id/settings_label_booze" />

    <TextView
        android:text="City:"
        android:layout_width="90dp"
        android:layout_marginTop="16dp"
        android:id="@+id/settings_label_city"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/settings_publist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/settings_label_pub"
        android:layout_alignEnd="@+id/settings_label_pub"
        android:layout_height="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignTop="@+id/settings_label_city"
        android:layout_alignLeft="@+id/settings_publist"
        android:layout_alignStart="@+id/settings_publist"
        android:id="@+id/settings_edit_city" />

    <TextView
        android:text="Price:"
        android:layout_width="90dp"
        android:layout_marginTop="19dp"
        android:id="@+id/settings_label_price"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_height="40dp"
        android:layout_below="@+id/settings_edit_city"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/settings_edit_city"
        android:layout_alignRight="@+id/settings_label_city"
        android:layout_alignEnd="@+id/settings_label_city" />

    <RatingBar
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_label_price"
        android:layout_alignLeft="@+id/settings_edit_city"
        android:layout_alignStart="@+id/settings_edit_city"
        android:id="@+id/settings_edit_price"
        android:layout_width="200dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_label_booze"
        android:layout_alignRight="@+id/settings_label_booze"
        android:layout_alignEnd="@+id/settings_label_booze"
        android:layout_marginTop="13dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_add_circle_outline_black_48dp"
        android:id="@+id/settings_add_booze" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_label_pub"
        android:layout_alignRight="@+id/settings_label_pub"
        android:layout_alignEnd="@+id/settings_label_pub"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_add_circle_outline_black_48dp"
        android:id="@+id/settings_add_pub" />

</RelativeLayout>
