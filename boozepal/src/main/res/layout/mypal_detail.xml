<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/mypal_detail"
style="?android:attr/textAppearanceLarge"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:orientation="vertical"
tools:context="hu.boozepalmobile.boozepal.fragments.MyPalDetailFragment">

<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="@string/name"
            android:layout_height="wrap_content"
            android:id="@+id/NameLabel"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:layout_width="60dp" />

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/mypal_name"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:layout_width="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="Selected date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypal_date_label"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypal_date_text"
            android:textSize="18sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="Selected pub:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypal_pub_label"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypal_pub_text"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="Pubs:"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:layout_below="@+id/mypal_boozelist"
            android:layout_alignRight="@+id/BoozeLabel"
            android:layout_alignEnd="@+id/BoozeLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/PubLabel"
            android:layout_width="60dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_below="@+id/mypal_boozelist"
            android:layout_alignLeft="@+id/mypal_boozelist"
            android:layout_alignStart="@+id/mypal_boozelist"
            android:layout_height="150dp"
            android:id="@+id/mypal_publist" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="@string/boozes"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:id="@+id/BoozeLabel"
            android:layout_below="@+id/NameLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="70dp" />

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/mypal_boozelist"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/BoozeLabel"
            android:layout_alignLeft="@+id/mypal_detail_price"
            android:layout_alignStart="@+id/mypal_detail_price" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="Price:"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mypal_publist"
            android:layout_alignRight="@+id/PubLabel"
            android:layout_alignEnd="@+id/PubLabel"
            android:layout_marginTop="27dp"
            android:id="@+id/pal_detail_price_label"
            android:textSize="18sp"
            android:textAlignment="textEnd" />

        <RatingBar
            android:layout_height="wrap_content"
            android:id="@+id/mypal_detail_price"
            android:numStars="5"
            android:stepSize="1"
            android:layout_below="@+id/mypal_publist"
            android:layout_toRightOf="@+id/pal_detail_price_label"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="250dp" />

    </TableRow>

</TableLayout>

</LinearLayout>