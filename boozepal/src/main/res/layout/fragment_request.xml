<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/request_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="TextView"
        android:id="@+id/fragment_request_city"
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/fragment_request_name"
        android:layout_alignLeft="@+id/fragment_request_name"
        android:layout_alignStart="@+id/fragment_request_name"
        android:layout_height="25dp"
        android:textAllCaps="true" />

    <TextView
        android:text="TextView"
        android:layout_width="253dp"
        android:id="@+id/fragment_request_name"
        android:textSize="24sp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:id="@+id/fragment_request_date"
        android:layout_alignBaseline="@+id/fragment_request_city"
        android:layout_alignBottom="@+id/fragment_request_city"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/fragment_request_city"
        android:layout_toEndOf="@+id/fragment_request_city" />
</RelativeLayout>