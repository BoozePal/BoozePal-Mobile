<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="4dp"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            card_view:srcCompat="@color/colorPrimary"
            android:id="@+id/imageView2"
            android:layout_height="100dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:id="@+id/fragment_mypals_name"
            android:textSize="18sp"
            android:textAlignment="viewStart" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/fragment_mypals_name"
            android:layout_alignStart="@+id/fragment_mypals_name"
            android:layout_marginBottom="20dp"
            android:id="@+id/fragment_mypals_city"
            android:textSize="15sp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fragment_mypals_city"
            android:layout_toRightOf="@+id/fragment_mypals_name"
            android:layout_toEndOf="@+id/fragment_mypals_name"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:id="@+id/fragment_mypals_date" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>

