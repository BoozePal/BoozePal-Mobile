<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pal_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="hu.boozepalmobile.boozepal.PalDetailFragment" >

    <ListView
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/BoozeLabel"
        android:layout_alignLeft="@+id/GenderText"
        android:layout_alignStart="@+id/GenderText"
        android:id="@+id/BoozeListView"
        android:layout_height="150dp" />

    <TextView
        android:text="@string/gender"
        android:layout_height="30dp"
        android:id="@+id/GenderLabel"
        android:textAlignment="textEnd"
        android:layout_width="120dp"
        android:textSize="18sp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/NameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/NameLabel"
        android:layout_alignEnd="@+id/NameLabel" />

    <TextView
        android:text="@string/name"
        android:layout_height="30dp"
        android:id="@+id/NameLabel"
        android:textAlignment="textEnd"
        android:layout_width="120dp"
        android:textSize="18sp" />

    <TextView
        android:text="@string/name_of_the_xy"
        android:layout_height="30dp"
        android:id="@+id/NameText"
        android:textAlignment="viewStart"
        android:layout_width="120dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <TextView
        android:text="@string/gender_of_xy"
        android:layout_height="30dp"
        android:id="@+id/GenderText"
        android:textAlignment="viewStart"
        android:layout_width="120dp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/GenderLabel"
        android:layout_alignBottom="@+id/GenderLabel"
        android:layout_alignLeft="@+id/NameText"
        android:layout_alignStart="@+id/NameText" />

    <TextView
        android:text="@string/boozes"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:layout_width="120dp"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/GenderLabel"
        android:layout_alignRight="@+id/GenderLabel"
        android:layout_alignEnd="@+id/GenderLabel"
        android:id="@+id/BoozeLabel" />

    <TextView
        android:text="Pubs:"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:layout_width="120dp"
        android:textSize="18sp"
        android:layout_below="@+id/BoozeListView"
        android:layout_alignRight="@+id/BoozeLabel"
        android:layout_alignEnd="@+id/BoozeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/PubLabel" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/BoozeListView"
        android:layout_alignLeft="@+id/BoozeListView"
        android:layout_alignStart="@+id/BoozeListView"
        android:layout_height="150dp"
        android:id="@+id/PubListView" />

</RelativeLayout>
